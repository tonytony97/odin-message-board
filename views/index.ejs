<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%- title %></title>
        <link rel="stylesheet" , href="./styles.css" />
    </head>
    <body>
        <%- include ('navbar',{links:links});%>
        <ul>
            <% messages.forEach((message) => { %>
            <div id="msg">
                <p class="userName">
                    <%- include('messages/message', {message:message.username});
                    %>
                </p>
                <p class="msgText">
                    <%-include('messages/message', {message:message.text}); %>
                </p>
                <p class="date">
                    <%-include('messages/message', {message:message.added}); %>
                </p>
                <p class="id">
                    <%-include('messages/message', {message:message.id}); %>
                </p>
                <button>
                    <a
                        class="details"
                        href="/<%-include('messages/message', {message:message.id}); %>"
                        >Open</a
                    >
                </button>
            </div>
            <% });%>
        </ul>
    </body>
</html>
